            <th>id</th>
            <th>Name</th>
            <th>number</th>
            <th>price</ht>
            <th>Click below to View Item</th>
          </tr>
    		  {% for item in items %} 

      			  <tr>

                <td>  {{ item.item_id}} </td>
        				<td>  {{ item.item_name }} </td>
